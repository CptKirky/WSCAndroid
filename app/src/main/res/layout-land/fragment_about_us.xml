<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="filmsoc.wscandroid.AboutUsActivity$PlaceholderFragment">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/aboutUs_LogoFrame"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true">

        <ImageView
            android:layout_width="277dp"
            android:layout_height="wrap_content"
            android:id="@+id/aboutUs_CinemaForAllLogo"
            android:src="@drawable/cinema_for_all"
            android:adjustViewBounds="true"
            android:layout_gravity="center_horizontal|bottom"
            android:foregroundGravity="bottom|center_horizontal"
            android:contentDescription="@string/cinema_for_all_logo"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="207dp"
            android:layout_height="wrap_content"
            android:id="@+id/aboutUs_SULogo"
            android:src="@drawable/su_logo"
            android:adjustViewBounds="true"
            android:layout_gravity="center_horizontal|top"
            android:contentDescription="@string/warwick_su_logo"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/aboutUs_CinemaForAllLogo" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/aboutUs_contentFrame"
        android:layout_toEndOf="@+id/aboutUs_LogoFrame"
        android:paddingLeft="10dp"
        android:layout_alignTop="@+id/aboutUs_LogoFrame">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/general_info"
            android:id="@+id/textView" />
    </ScrollView>

</RelativeLayout>
