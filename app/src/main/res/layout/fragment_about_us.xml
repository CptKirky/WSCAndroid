<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="filmsoc.wscandroid.AboutUsActivity$PlaceholderFragment">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/aboutUs_LogoFrame">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/aboutUs_CinemaForAllLogo"
            android:src="@drawable/cinema_for_all"
            android:adjustViewBounds="true"
            android:layout_alignParentTop="false"
            android:layout_alignParentEnd="true"
            android:layout_gravity="right|center_vertical"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/aboutUs_SULogo"
            android:src="@drawable/su_logo"
            android:adjustViewBounds="true"
            android:layout_gravity="left|center_vertical"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/aboutUs_contentFrame"
        android:layout_toEndOf="@+id/aboutUs_LogoFrame"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/aboutUs_LogoFrame"
        android:paddingTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/general_info"
            android:id="@+id/textView"
            android:layout_below="@+id/aboutUs_LogoFrame"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />
    </ScrollView>

</RelativeLayout>
